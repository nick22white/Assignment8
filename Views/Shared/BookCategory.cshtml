@model Book

<!--Partial view containing the inside of the foreach loop in Index-->
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            Title: @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <p>Author: @Model.AuthFirstName @Model.AuthLastName</p>
            </span>
        </h4>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Classification: @Model.Classification</p>
        <p>Category: @Model.Category</p>
        <p>Price: @("$" + Model.Price)</p>
        <p>Number of Pages: @Model.NumPages</p>
    </div>


    <form id="@Model.BookId" asp-page="/ShoppingCart" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">Add to Cart</button>
        </span>
    </form>
</div>
